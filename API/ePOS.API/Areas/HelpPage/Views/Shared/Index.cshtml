@using System.Web.Http
@using System.Web.Http.Controllers
@using System.Web.Http.Description
@using System.Collections.ObjectModel
@using WebApi.Areas.HelpPage.Models
@using System.Configuration
@model Collection<ApiDescription>

@{
    ViewBag.Title = "Dr.Link API Help Page";

    // Group APIs by controller
    ILookup<HttpControllerDescriptor, ApiDescription> apiGroups = Model.ToLookup(api => api.ActionDescriptor.ControllerDescriptor);
    
}
<link type="text/css" href="~/Areas/HelpPage/HelpPage.css" rel="stylesheet" />
 

<header class="help-page">
    <div class="content-wrapper">
        <div class="body-header">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>
</header>
<div id="body" class="help-page">    
    <section class="content-wrapper main-content clear-fix">
        <div class="body-content">
            <p>Last Updated: @ConfigurationManager.AppSettings["docLatestBuild"]</p>
            <p>Base URL: @ConfigurationManager.AppSettings["docBaseURL"]</p>
            <p>Security: Basic authentication</p>
            @if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == Core_App.BL.Constants.API_ROLE_NAME.DOCTOR) 
            {
                <p>Sample SignalR URL: <a href="~/doc/sample_signalr_message.cshtml">sample_signalr_message.cshtml</a></p>    
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == Core_App.BL.Constants.API_ROLE_NAME.MEMBER)
            {
                <p>Sample Push Notification URL: <a href="~/doc/member_sample_push_notification_message.cshtml">sample_push_notification_message.cshtml</a></p>    
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == Core_App.BL.Constants.API_ROLE_NAME.DRIVER)
            {
                <p>Sample Push Notification URL: <a href="~/doc/driver_sample_push_notification_message.cshtml">sample_push_notification_message.cshtml</a></p>    
            }
            else if (this.ViewContext.RouteData.Values["controller"].ToString().ToLower() == Core_App.BL.Constants.API_ROLE_NAME.PHARMACY)
            {
                <p>Sample Push Notification URL: <a href="~/doc/pharmacy_sample_push_notification_message.cshtml">sample_push_notification_message.cshtml</a></p>    
            }

            @foreach (var group in apiGroups)
            {
                if (@group.Key.ControllerName.ToString().ToLower() == this.ViewContext.RouteData.Values["controller"].ToString().ToLower())
                {
                    @Html.DisplayFor(m => group, "ApiGroup")
                }
            }

            @*Display with custom ordering
            @foreach (var group in apiGroups
            .OrderBy(g => ViewBag.DisplayOrder.ContainsKey(g.Key.ControllerType) ?
              ViewBag.DisplayOrder[g.Key.ControllerType] : Int32.MaxValue))
            {
                @Html.DisplayFor(m => group, "ApiGroup")
            }*@

        </div>
    </section>
</div>
